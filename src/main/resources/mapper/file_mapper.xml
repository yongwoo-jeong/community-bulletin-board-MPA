<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mpa.bbs.mapperInterface.FileMapper">
  <!-- SELECT 파일 리스트 반환  -->
  <select id="selectFiles" resultType="com.mpa.bbs.vo.FileVO">
    SELECT *
    FROM   file
    WHERE  article_id = #{articleId}
  </select>

  <!-- 파일 다운로드를 위해 해당 파일 튜플 반환  -->
  <select id="selectForDownload" resultType="com.mpa.bbs.vo.FileVO">
    SELECT *
    FROM   file
    WHERE  file_uuid = #{fileUuid}
  </select>

  <!-- 새 파일 삽입  -->
  <insert id="insertFile">
    INSERT INTO ${tableName}
    (
    uuid,
    name_on_server,
    name_original,
    size,
    path,
    extension,
    article_id
    )
    VALUES
    (
    UNHEX(REPLACE(UUID(),'-','')),
    #{newFile.nameOnServer},
    #{newFile.nameOriginal},
    #{newFile.size},
    #{newFile.path},
    #{newFile.extension},
    #{articleId}
    )
  </insert>
  <!-- 게시글 수정 시 업로드된 개별 파일 삭제  -->
  <delete id="deleteFileOnArticle">
    DELETE FROM file
    WHERE article_id = #{articleId}
  </delete>
  <!-- 게시글 삭제 시 관련 파일 삭제  -->
  <delete id="deleteFiles">
    DELETE FROM file
    WHERE article_id= #{articleId}
  </delete>
  <delete id="deleteFile">
    DELETE FROM file
    WHERE file_uuid=#{fileUuid}
  </delete>
</mapper>